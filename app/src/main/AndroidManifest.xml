<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sunshine.android.tkinetik.net.sunshine" >

    //added permission - starts with ..."android.permission.INTENDEDPERMISSION
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:theme="@style/ForecastTheme" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/title_activity_detail"
            android:name=".DetailActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sunshine.android.tkinetik.net.sunshine.MainActivity" />
        </activity>
        <activity
            android:label="@string/title_activity_settings"
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sunshine.android.tkinetik.net.sunshine.MainActivity" />
        </activity>
        <provider
            android:authorities="sunshine.android.tkinetik.net.sunshine"
            android:name=".data.WeatherProvider"
        />
    </application>

</manifest>
